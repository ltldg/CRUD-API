{
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "outDir": "dist",
      "baseUrl": "./src",

    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": [
      "./src/**/*",
      "./",
      "**/*.ts"
    ],
    "exclude": ["node_modules", "**/node_modules/*"]
  }